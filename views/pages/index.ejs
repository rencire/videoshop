</head>


<body>
    <div class="row">
        <div class="large-16 columns">
            <header id="globalMastheadContainer" style="height: 100px;">

                <div id="globalMastheadSearchMenu">
                    <div id="globalMastheadBrandLogo" class="left">
                        <a target="_top" href="/">
                            <div id="macysHomePageLogo" class="globalMastheadLogo" alt="Macy's" title="Macy's"></div>
                        </a>

                    </div>
                    <div class="right">
                      <a target="_top" href="/upload">
                            <img src="/public/image/videoUpload.jpeg" alt="Smiley face" height="42" width="80">
                        </a>
                    </div> 
                </div>
            </header>
        </div>
    </div>
    <div class="row">
        <div id="topNav" class="large-16 small-16 columns">
            <ul class="tabs">
                <li class="tab-title active selected"><a href="#panel1">Women</a></li>
                <li class="tab-title"><a href="#panel2">Men</a></li>
            </ul>
            <div class="tabs-content">
                <div class="content active" id="panel1">
                    <% womenposts.forEach(function(womanpost) { %>
                        <div class="row">
                            <div class="small-16 medium-14 medium-centered columns userContainer">
                                <div class="row rowTop">
                                    <div class="userimage small-1 small-offset-1 columns">
                                        <img src="<%= womanpost.profile %>">
                                    </div>
                                    <div class="userdetails small-12 small-offset-1 columns">
                                        <%= womanpost.user %>
                                    </div>
                                     <div class="loops small-1  columns">
                                      <%= womanpost.loops %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="small-16 columns">
                                        <video autobuffer controls loop>
                                            <source id="mp4" src="<%= womanpost.filename %>">
                                        </video>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="comment small-10 small-centered  columns">
                                      <a href="/comment">
                                       <img src="/public/image/comment.png" alt="Smiley face" height="42" width="42">
                                      </a>
                                      <div class="right">
                                        <a href="<%= womanpost.shopUrl %>">
                                        <button class="tiny">Shop Now</button> 
                                      </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% }); %>
                </div>
                <div class="content" id="panel2">
                    <% menposts.forEach(function(manpost) { %>
                        <div class="row">
                            <div class="small-16 medium-14 medium-centered columns userContainer">
                                <div class="row rowTop">
                                    <div class="userimage small-1 small-offset-1 columns">
                                        <img src="<%= manpost.profile %>">
                                    </div>
                                    <div class="userdetails small-12 small-offset-1 columns">
                                        <%= manpost.user %>
                                    </div>
                                     <div class="loops small-1  columns">
                                      <%= manpost.loops %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="small-16 columns">
                                        <video autobuffer controls loop>
                                            <source id="mp4" src="<%= manpost.filename %>">
                                        </video>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="comment small-10 small-centered  columns">
                                      <a href="/comment">
                                       <img src="/public/image/comment.png" alt="Smiley face" height="42" width="42">
                                      </a>
                                      <div class="right">
                                        <a href="<%= manpost.shopUrl %>">
                                        <button class="tiny">Shop Now</button> 
                                      </div>  
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>
    <script>
    $(document).ready(function() {
        $(".tabs li").click(function() {
            $(".tabs li").removeClass("selected");
            $(this).addClass("selected");
            var test = $(this).find("a").attr("href");
            $(".tabs-content").children(".content").removeClass("active")
            $(".tabs-content").find(test).addClass("active")

        });
       var testloop=true;
       $(window).scroll(function() {
          $('video').each(function() {

              if ($(this).is(":in-viewport( 400 )")) {
                   var ele=$(this).parent().parent().parent().find(".loops");
                  
                  var loopValue=ele.html()
                  loopValue= parseInt(loopValue);
                  loopValue=loopValue+1;
                  ele.html(loopValue);
                 
                  $(this)[0].play();
              } else{
                  // testloop=true;
                   $(this)[0].pause();
                   testloop=true;
              }
          });
      });
    });
    </script>
</body>

</html>
